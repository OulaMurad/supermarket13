<%- include('_layouts/header') -%>
<main>
    <section>
        <h1>Edit Messages</h1>
        <form method="post" action="/allmessages/edit/<%= contacts._id %>">
            <div class="form-field">
                <label for="name">Name:</label>
                <input type="text" class="form-input" name="name" value="<%= contacts.name %>">
            </div>
            <div class="form-field">
                <label for="email">email:</label>
                <input type="text" class="form-input" name="email" value="<%= contacts.email %>">
            </div>
            <div class="form-field">
                <label for="phone">phone:</label>
                <input type="text" class="form-input" name="phone" value="<%= contacts.phone %>">
            </div>
            <div class="form-field">
                <label for="message">message:</label>
                <input type="text" class="form-input" name="message" value="<%= contacts.message %>">
            </div>
            <div class="form-field">
                <input type="submit" class="form-submit" value="Submit">
            </div>
        </form>
    </section>
</main>
<% if(typeof errors !== 'undefined'){
    for(var error of errors){
        %>
        <h3><%= error.msg %></h3>
        <%
    }
}
%>
<%- include('_layouts/footer') -%>